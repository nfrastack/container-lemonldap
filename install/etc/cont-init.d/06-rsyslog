#!/command/with-contenv bash

source /assets/functions/00-container
prepare_service
PROCESS_NAME="rsyslog"

### Check to see if Enabled/Disabled
  if [ "$LOG_TYPE" = "CONSOLE" ] ;  then
    print_warn "Disabling Syslog"
    service_stop $(basename "$0")
  else
    create_logrotate lemonldap ${LOG_PATH}/${LOG_FILE} lemonldap llng llng
    create_logrotate lemonldap_user ${LOG_PATH}/${LOG_FILE_USER} lemonldap llng llng
    sed -i "s|<LOG_PATH>|${LOG_PATH}|g" /etc/rsyslog.conf
    sed -i "s|<LOG_FILE>|${LOG_FILE}|g" /etc/rsyslog.conf
    sed -i "s|<LOG_FILE_USER>|${LOG_FILE_USER}|g" /etc/rsyslog.conf
  fi

liftoff